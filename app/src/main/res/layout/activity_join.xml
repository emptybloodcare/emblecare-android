<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".JoinActivity"
    android:background="#f6f6f6">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/only_logo"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:id="@+id/rl_join_act_id"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="30dp"
            android:layout_below="@id/logo"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아 이 디"
                android:layout_centerVertical="true"
                android:textColor="#3d3d3d"
                android:fontFamily="@font/nanumsquare_acb"
                android:textSize="17dp"/>
            <EditText
                android:id="@+id/et_join_act_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:fontFamily="@font/nanumsquare_acr"
                android:layout_marginLeft="100dp"
                android:nextFocusDown="@id/et_join_act_pw"
                android:singleLine="true"
                android:textColor="#515151"
                android:background="@drawable/underline"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_join_act_pw"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="30dp"
            android:layout_below="@id/rl_join_act_id"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비 밀 번 호"
                android:layout_centerVertical="true"
                android:textColor="#3d3d3d"
                android:fontFamily="@font/nanumsquare_acb"
                android:textSize="17dp"/>
            <EditText
                android:id="@+id/et_join_act_pw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:nextFocusDown="@id/et_join_act_name"
                android:singleLine="true"
                android:layout_marginLeft="100dp"
                android:textColor="#515151"
                android:fontFamily="@font/nanumsquare_acr"
                android:background="@drawable/underline"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_join_act_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="30dp"
            android:layout_below="@id/rl_join_act_pw"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이 름"
                android:layout_centerVertical="true"
                android:textColor="#3d3d3d"
                android:fontFamily="@font/nanumsquare_acb"
                android:textSize="17dp"/>
            <EditText
                android:id="@+id/et_join_act_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:nextFocusDown="@id/et_join_act_year"
                android:singleLine="true"
                android:fontFamily="@font/nanumsquare_acr"
                android:layout_marginLeft="100dp"
                android:textColor="#515151"
                android:background="@drawable/underline"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_join_act_birth"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="30dp"
            android:layout_below="@id/rl_join_act_name"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생 년 월 일"
                android:layout_centerVertical="true"
                android:textColor="#3d3d3d"
                android:fontFamily="@font/nanumsquare_acb"
                android:textSize="17dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:layout_marginLeft="100dp">
                <EditText
                    android:id="@+id/et_join_act_year"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="연(OOOO)"
                    android:nextFocusDown="@id/et_join_act_month"
                    android:singleLine="true"
                    android:textColor="#515151"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textColorHint="#b5b5b5"
                    android:background="@drawable/underline"/>
                <EditText
                    android:id="@+id/et_join_act_month"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="월(OO)"
                    android:nextFocusDown="@id/et_join_act_day"
                    android:singleLine="true"
                    android:textColor="#515151"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="5dp"
                    android:textSize="15dp"
                    android:textColorHint="#b5b5b5"
                    android:background="@drawable/underline"/>
                <EditText
                    android:id="@+id/et_join_act_day"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="일(OO)"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textColor="#515151"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textColorHint="#b5b5b5"
                    android:background="@drawable/underline"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_join_act_sex"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/rl_join_act_birth"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성 별"
                android:layout_centerVertical="true"
                android:textColor="#3d3d3d"
                android:fontFamily="@font/nanumsquare_acb"
                android:textSize="17dp"/>
            <RadioGroup
                android:id="@+id/radiogroup_join"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="100dp">
                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="여자"
                    android:layout_marginRight="40dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:textSize="15dp"/>
                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:text="남자"
                    android:textSize="15dp"/>
            </RadioGroup>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_join_act_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유효한 가입이 아닙니다!!"
            android:fontFamily="@font/nanumsquare_acr"
            android:visibility="invisible"
            android:textColor="#d75a4a"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/rl_join_act_sex"/>

        <RelativeLayout
            android:id="@+id/btn_join"
            android:layout_width="match_parent"
            android:layout_height="44.5dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_button_red"
            android:layout_below="@id/tv_join_act_check">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회 원 가 입"
                android:fontFamily="@font/nanumsquare_aceb"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
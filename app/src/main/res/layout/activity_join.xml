<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity"
    android:background="#f6f6f6">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/only_logo"
            android:layout_centerHorizontal="true"/>

        <RelativeLayout
            android:id="@+id/rl_join_act_id"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="30dp"
            android:layout_below="@id/logo"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아 이 디"
                android:layout_centerVertical="true"
                android:textSize="17dp"/>
            <EditText
                android:id="@+id/et_join_act_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:layout_marginLeft="100dp"
                android:textColor="#515151"
                android:background="@drawable/underline"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_join_act_pw"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="30dp"
            android:layout_below="@id/rl_join_act_id"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비 밀 번 호"
                android:layout_centerVertical="true"
                android:textSize="17dp"/>
            <EditText
                android:id="@+id/et_join_act_pw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:layout_marginLeft="100dp"
                android:textColor="#515151"
                android:background="@drawable/underline"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_join_act_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="30dp"
            android:layout_below="@id/rl_join_act_pw"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이 름"
                android:layout_centerVertical="true"
                android:textSize="17dp"/>
            <EditText
                android:id="@+id/et_join_act_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:layout_marginLeft="100dp"
                android:textColor="#515151"
                android:background="@drawable/underline"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_join_act_birth"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="30dp"
            android:layout_below="@id/rl_join_act_name"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생년월일"
                android:layout_centerVertical="true"
                android:textSize="17dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:layout_marginLeft="100dp">
                <EditText
                    android:id="@+id/et_join_act_year"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="연"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textColorHint="#b5b5b5"
                    android:background="@drawable/underline"/>
                <EditText
                    android:id="@+id/et_join_act_month"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="월"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="5dp"
                    android:textSize="15dp"
                    android:textColorHint="#b5b5b5"
                    android:background="@drawable/underline"/>
                <EditText
                    android:id="@+id/et_join_act_day"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="일"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textColorHint="#b5b5b5"
                    android:background="@drawable/underline"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_join_act_sex"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/rl_join_act_birth"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:layout_centerVertical="true"
                android:textSize="17dp"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="100dp">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="여자"
                    android:layout_marginRight="40dp"
                    android:textSize="15dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="남자"
                    android:textSize="15dp"/>
            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_login_act"
            android:layout_width="match_parent"
            android:layout_height="44.5dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/rounded_button_red"
            android:layout_below="@id/rl_join_act_sex"
            android:layout_marginTop="40dp">
            <TextView
                android:id="@+id/tv_login_act_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회 원 가 입"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
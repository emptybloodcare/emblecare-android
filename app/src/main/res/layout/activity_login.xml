<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity"
    android:background="#f6f6f6">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/only_logo"
            android:layout_centerHorizontal="true"/>
        <RelativeLayout
            android:id="@+id/rl_login_act_id"
            android:layout_width="match_parent"
            android:layout_height="44.5dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/border_round_rect_gray_20dp"
            android:layout_below="@id/logo"
            android:layout_marginTop="35dp">
            <EditText
                android:id="@+id/et_login_act_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="아 이 디"
                android:layout_marginLeft="15dp"
                android:textColorHint="#b5b5b5"
                android:background="@null"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_login_act_pw"
            android:layout_width="match_parent"
            android:layout_height="44.5dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/border_round_rect_gray_20dp"
            android:layout_below="@id/rl_login_act_id"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/et_login_act_pw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="비 밀 번 호"
                android:layout_marginLeft="15dp"
                android:textColorHint="#b5b5b5"
                android:background="@null"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".main.MainActivity"
        android:background="#f6f6f6">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/txt_main_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="김눈송"
                android:textSize="26sp"
                android:textColor="@color/TextMain"
                android:fontFamily="@font/nanumsquare_acb"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="님"
                android:layout_toRightOf="@id/txt_main_user_name"
                android:layout_alignBottom="@id/txt_main_user_name"
                android:layout_marginLeft="4.8dp"
                android:textColor="@color/TextMain"
                android:fontFamily="@font/nanumsquare_acr"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/img_main_blood_percent"
            android:layout_width="146dp"
            android:layout_height="146dp"
            android:src="@drawable/blood_drop"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"/>
        <RelativeLayout
            android:layout_width="226dp"
            android:layout_height="76dp"
            android:background="#e9e9e9"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/txt_main_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘의 빈혈 위험도는"
                android:fontFamily="@font/nanumsquare_acr"
                android:textColor="@color/TextMain"
                android:textSize="18sp"
                android:layout_marginTop="12dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/txt_main_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="높음"
                android:textColor="#e22d15"
                android:fontFamily="@font/nanumsquare_acb"
                android:textSize="23dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txt_main_today"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6.5dp">
            <ImageView
                android:id="@+id/img_main_check_button"
                android:layout_width="18.3dp"
                android:layout_height="18.3dp"
                android:src="@drawable/check_button"/>
            <TextView
                android:id="@+id/txt_main_advice_announcement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쓰러질 가능성 다분~! 건강에 유의하세요"
                android:textSize="13sp"
                android:textColor="#d07f72"
                android:fontFamily="@font/nanumsquare_acr"
                android:layout_toRightOf="@id/img_main_check_button"
                android:layout_marginLeft="2dp"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_main_measure"
            android:layout_width="190dp"
            android:layout_height="43dp"
            android:text="빈혈 측정하기"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="31dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#b9b9b9"
            android:layout_marginTop="34dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/nanumsquare_acb"
                android:text="지금은"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginVertical="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="1dp"
                android:background="#e9e9e9">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날씨"
                    android:textSize="17sp"
                    android:textColor="@color/TextSub"
                    android:fontFamily="@font/nanumsquare_acb"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:src="@drawable/rounded_square1"/>
                    <TextView
                        android:id="@+id/txt_main_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23도"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="1dp"
                android:background="#e9e9e9">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="습도"
                    android:textSize="17sp"
                    android:textColor="@color/TextSub"
                    android:fontFamily="@font/nanumsquare_acb"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:src="@drawable/rounded_square1"/>
                    <TextView
                        android:id="@+id/txt_main_wetness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="40%"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginVertical="2dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="2dp"
                android:background="#e9e9e9">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생리"
                    android:textSize="17sp"
                    android:textColor="@color/TextSub"
                    android:fontFamily="@font/nanumsquare_acb"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="28dp"
                        android:src="@drawable/rounded_square1"/>
                    <TextView
                        android:id="@+id/txt_main_period"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ON"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>